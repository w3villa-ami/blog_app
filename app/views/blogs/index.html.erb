<div class="container">
  <div class="row">
    <div class="col-8">

<div class="index">
 <% @blogs.each do |blog| %>

<div class="card mb-3" style="style="width: 30rem; height:20rem">
  <div class="row no-gutters">
    <div class="col-md-4">
       <%if blog.image.attached? %>
        <%= image_tag(blog.image ,:class => "card-img-top") %>
        <%end %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h4 class="card-title"><%= blog.title %></h4>
         <h6 class="card-title"><%= blog.created_at %></h6>
        <p class="card-text"><%= truncate(strip_tags(blog.rich_text_body.to_s), length: 150)%> <%= link_to "Read More", blog_path(blog)%></p>
        <%= link_to 'Show', blog,class:"btn btn-secondary"%>
      <% if (user_signed_in? && current_user == blog.user) %>
        <%= link_to 'Edit', edit_blog_path(blog),class:"btn btn-secondary"%>
        <%= link_to 'Destroy', blog, method: :delete,class:" btn btn-secondary",data: { confirm: 'Are you sure?' } %>
      <% end %>
      </div>
    </div>
  </div>
</div>

<% end %>
</div>

<div class='col-4'>

</div>
</div>
</div>




      









